<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PasswordManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_pink</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Label" parent="android:Widget.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/bebasneue_regular</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="Header" parent="android:Widget.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/bebasneue_regular</item>
        <item name="android:textSize">64sp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="Input" parent="android:Widget.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="android:ems">15</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="ButtonBorderPink" parent="android:Widget.Button">
        <item name="android:textColor">@color/primary_pink</item>
        <item name="android:fontFamily">@font/bebasneue_regular</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="ButtonFilledPink" parent="android:Widget.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:fontFamily">@font/bebasneue_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>